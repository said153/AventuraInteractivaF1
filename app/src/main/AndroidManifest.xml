<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.f1tracker">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.F1Tracker"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.F1Tracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de autos -->
        <activity
            android:name=".ui.cars.CarsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.F1Tracker">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- Actividad de pilotos -->
        <activity
            android:name=".ui.drivers.DriversActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.cars.CarsActivity"
            android:theme="@style/Theme.F1Tracker">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.cars.CarsActivity" />
        </activity>

    </application>

</manifest>