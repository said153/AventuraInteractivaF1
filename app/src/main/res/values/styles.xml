<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para títulos principales -->
    <style name="F1TitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Estilo para subtítulos -->
    <style name="F1SubtitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Estilo para texto de información -->
    <style name="F1InfoTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Estilo para tarjetas principales -->
    <style name="F1CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Estilo para números de pilotos -->
    <style name="F1NumberStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>