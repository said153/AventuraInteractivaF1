<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la aplicación -->
    <style name="Theme.F1Tracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/f1_red</item>
        <item name="colorPrimaryVariant">@color/f1_black</item>
        <item name="colorOnPrimary">@color/f1_white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/f1_silver</item>
        <item name="colorSecondaryVariant">@color/f1_black</item>
        <item name="colorOnSecondary">@color/f1_black</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/f1_black</item>
        <item name="colorSurface">@color/main_bg_start</item>
        <item name="colorOnBackground">@color/f1_white</item>
        <item name="colorOnSurface">@color/f1_white</item>

        <!-- Personalización de ActionBar -->
        <item name="actionBarStyle">@style/F1ActionBarStyle</item>
        <item name="android:statusBarColor">@color/f1_black</item>
        <item name="android:navigationBarColor">@color/f1_black</item>
    </style>

    <!-- Estilo personalizado para ActionBar -->
    <style name="F1ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/f1_red</item>
        <item name="titleTextStyle">@style/F1ActionBarTitleStyle</item>
    </style>

    <!-- Estilo para el título del ActionBar -->
    <style name="F1ActionBarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/f1_white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>